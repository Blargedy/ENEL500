<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/txtRealTimeQuestion"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:alpha="1.0"
        android:text="Hydra Lite"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="75sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_instruction1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Please start the image server using the following command:"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25" />

    <TextView
        android:id="@+id/txt_command"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="java -jar HydraImageServer.jar"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="2">

        <TextView
            android:id="@+id/txt_ipAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PC's IP address: "
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ipAddress"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25" />

    <Button
        android:id="@+id/btn_testConnection"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:background="@drawable/round_btn"
        android:enabled="true"
        android:text="Test Connection"
        android:textAllCaps="false"
        android:textColor="@color/common_text_color"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/round_btn"
        android:enabled="true"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/common_text_color"
        android:textSize="15dp"
        android:visibility="gone"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_connectionStatus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_weight="1" />

</LinearLayout>
