



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_console"
        android:text="Console: Loading"
        tools:textSize="36sp"
        tools:textStyle="bold"
        android:textAlignment="center"
        android:layout_height="45dp" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="258dp" android:id="@+id/map"
        tools:context=".MapsActivity"
        android:layout_gravity="center"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_weight="0.82" />

    <TextView
        android:text="Survey Area Height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_surveyAreaHeight"
        android:textStyle="normal|bold" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbar_surveyAreaHeight"
        android:progress="25"
        android:layout_weight="0.05"
        android:visibility="invisible"
        android:max="100" />

    <TextView
        android:text="Survey Area Width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_surveyAreaWidth"
        android:textStyle="normal|bold" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbar_surveyAreaWidth"
        android:progress="25"
        android:layout_weight="0.05"
        android:visibility="invisible"
        android:max="100" />

    <Switch
        android:text="Hover Now "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sw_hoverNow"
        android:splitTrack="false"
        android:checked="false"
        android:textSize="30sp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbar_surveyProgressTracking"
        android:progress="0"
        android:layout_weight="0.05"
        android:max="100" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <Button
            android:text="Select Survey Area"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:id="@+id/btn_mainButton"
            android:layout_weight="1"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

