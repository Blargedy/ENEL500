<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_HydraTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/txtRealTimeQuestion"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.8"
        android:alpha="1.0"
        android:text="Hydra Lite"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="75sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtRealTimeQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/btn_reconstruct_live"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.5"
        android:alpha="1.0"
        android:gravity="center"
        android:text="Would you like to perform a real-time reconstruction?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:textColor="@color/white" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25" />

    <Button
        android:id="@+id/btn_reconstruct_live"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_above="@+id/btn_reconstruct_later"
        android:layout_alignStart="@+id/btn_reconstruct_later"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:alpha="1.0"
        android:background="@drawable/round_btn"
        android:elevation="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="@color/common_text_color"
        android:textSize="15dp"
        android:visibility="visible" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25" />

    <Button
        android:id="@+id/btn_reconstruct_later"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_above="@+id/imageDroneLogo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:alpha="1.0"
        android:background="@drawable/round_btn"
        android:gravity="center_vertical|center_horizontal"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="@color/common_text_color"
        android:textSize="15dp"
        android:visibility="visible" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".45" />

    <ImageView
        android:id="@+id/imageDroneLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:alpha="1.0"
        android:visibility="visible"
        app:srcCompat="@drawable/drone_marker" />

</LinearLayout>

